@model IEnumerable<WebBanHang.Models.EF.ProductCategory>

@if (Model != null && Model.Any())
{

<ul class="sidebar_categories">
    @foreach (var item in Model)
    {
        if (ViewBag.AliasCategory == item.Alias)
        {
            <li class="active"><a href="/danh-muc-san-pham/@item.Alias"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>@item.Title</a></li>
        }
        else
        {
            <li><a href="/danh-muc-san-pham/@item.Alias">@item.Title</a></li>
        }
    }

</ul>
}
